<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransition</item>
    </style>

    <style name="ToolbarPrimary" parent="Theme.AppCompat.Light.NoActionBar">
        //toolbar title color
        <item name="android:textColorPrimary">@android:color/white</item>
        //toolbar back arrow color
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:drawablePadding">24dp</item>

        <item name="android:background">@color/colorPrimary</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="buttonPrimary">
        <item name="android:layout_width">150dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/green</item>

    </style>

    <style name="EditTextTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@null</item>
    </style>

    <style name="RobotoItalicFont">
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

    <style name="RobotoBoldFont">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    
    <style name="ActivityTransition"  parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="Spinner">
        <item name="android:colorBackground">@color/white</item>
    </style>
</resources>
